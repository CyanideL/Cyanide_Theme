<?xml version="1.0" encoding="utf-8"?>
<!-- LET'S SET THE STYLES FOR THIS SETTINGS SHIT -->

<resources>
	<!-- MAIN SETTINGS STYLES SHEET -->

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material.Wallpaper" />
    <style name="Theme.Settings" parent="@style/Theme.SettingsBase">
        <item name="android:colorBackground">@*common:color/background_material_75_black</item>
        <item name="android:textColor">@*common:color/primary_text_color</item>
        <item name="android:statusBarColor">@*common:color/background_material_black</item>
    </style>
    <style name="CardView">
        <item name="cardBackgroundColor">@*common:color/background_material_75_black</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@*common:color/background_material_75_black</item>
    </style>
    
    <!-- About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed -->
	<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.DialogWhenLarge" />
	<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
		<item name="android:background">@color/theme_primary_dark</item>
		<item name="android:statusBarColor">@color/theme_primary</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>
	
</resources>
