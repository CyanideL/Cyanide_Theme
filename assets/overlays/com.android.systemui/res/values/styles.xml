<?xml version="1.0" encoding="utf-8"?>

    <!-- STYLES OVERRIDES FOR SYSTEM UI SHIT -->

<resources>
    <style name="Theme.SystemUI.Dialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorControlActivated">@color/system_accent_color</item>
        <item name="android:colorPrimary">@color/system_primary_color</item>
        <item name="android:colorBackground">@*common:color/backgroundplayground</item>
    </style>
    
    <style name="ListTheme" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@*common:color/background_material_75_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listSelector">@*android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipChildren">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@null</item>
        <item name="android:colorControlActivated">@color/system_accent_color</item>
    </style>

</resources>
